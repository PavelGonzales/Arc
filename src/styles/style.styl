@import './../fonts/fonts.css'
@import './../../node_modules/stylus-mixins/index.styl'

body
  background #fff
  color #000
  font-family 'TT_Norms'
  margin 0
  overflow hidden
  height 100vh

.layout 
    width 1440px
    width-between-property 'padding-left', 768, 80, 1440, 150, true, true 
    box-sizing border-box
    margin auto
    height 100%

.logo
  padding-top 120px
  width-between-property 'width', 768, 256, 1440, 480, true, true
  svg
    width 100%

.contacts 
  width-between-property 'margin-top', 768, 118, 1440, 221, true, true  
  width-between-property 'font-size', 768, 10, 1440, 20, true, true  

.bottom
  position absolute
  bottom 122px
  &__content
    display inline-block
    
  &__img
    display inline-block
    position absolute
    width-between-property 'top', 768, -78, 1440, -95, true, true
    width-between-property 'width', 768, 302, 1440, 657, true, true
    
    &:after
      content ''
      display block
      position absolute
      height 2px
      width 3000px
      background-color #000
      width-between-property 'bottom', 768, 32, 1440, 4, true, true
      left 93%
    svg 
      width 100%
      

  &__title
    font-weight 500
    text-transform uppercase
    letter-spacing  6px
    width-between-property 'font-size', 768, 21, 1440, 40, true, true

  &__text
    width-between-property 'font-size', 768, 13, 1440, 24, true, true
    
    